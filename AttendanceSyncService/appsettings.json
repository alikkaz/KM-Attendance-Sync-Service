{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "D:\\AttendanceSyncService\\logs\\log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "ConnectionStrings": {
  "SupabaseConnection": "Host=aws-1-ap-south-1.pooler.supabase.com;Port=6543;Database=postgres;Username=postgres;Password=[YOUR_SUPABASE_PASSWORD];SSL Mode=Require;Trust Server Certificate=true"
},
  "AppSettings": {
    "AccessDatabasePath": "D:\\Program Files (x86)\\essl\\eTimeTrackLite\\eTimeTrackLite1.mdb",
    "LastSyncFilePath": "D:\\AttendanceSyncService\\lastSync.txt",
    "SyncIntervalMinutes": 1,
    "SourceTimeZoneId": "India Standard Time"
  }
}